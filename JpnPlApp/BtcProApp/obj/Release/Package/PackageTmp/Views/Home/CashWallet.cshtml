
@{
    ViewBag.Title = "CashWallet";
}

<script src="~/Scripts/angular.min.js"></script>
<script src="~/app/scripts/CashIncomeWalletController.js"></script>

<section class="wrapper">
    <div ng-app="app" ng-controller="CashIncomeWallet" ng-cloak>
        <div class="row">
            <div class="col-sm-12">
                <section class="panel">
                    <header class="panel-heading">
                        <i class="fa fa-money" style="color:green"></i> Cash Income Wallet
                    </header>
                    <div class="panel-body">
                        <div style="text-align:center">
                            <h3>Binary Income</h3>
                        </div>
                        <div style="margin-bottom:10px">Showing 1 - {{Binaryledger.length}} of {{Binaryledger.length}} total</div>

                        <table class="table table-striped table-bordered" style="width:100%;text-align:center">
                            <thead>
                                <tr>
                                    <th style="text-align:center">Week Start Date</th>
                                    <th style="text-align:center">Transaction Date</th>
                                    <th style="text-align:center">Week End Date</th>
                                    <th style="text-align:center">Purchaser</th>
                                    <th style="text-align:center">Scheme</th>
                                    <th style="text-align:center">Amount</th>
                                    <th style="text-align:center">Wallet Income</th>
                                    <th style="text-align:center">Status</th>
                                    <th style="text-align:center">Payment Date</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="ldgr in Binaryledger">
                                    <td>{{ldgr.sWeekStartDate}}</td>
                                    <td>{{ldgr.sDate}}</td>
                                    <td>{{ldgr.sWeekEndDate}}</td>
                                    <td>{{ldgr.Purchaser}}</td>
                                    <td>{{ldgr.Package}}</td>
                                    <td>{{ldgr.Total | currency:'BDT '}}</td>
                                    <td>{{ldgr.WalletAmount | currency:'BDT '}}</td>
                                    <td>{{ldgr.PaymentStatus}}</td>
                                    <td>{{ldgr.PaymentDate}}</td>
                                </tr>
                                <tr>
                                    <td colspan="6" style="padding-right:15px;text-align:right;vertical-align:middle; font-weight:800">Earnings:</td>
                                    <td style="font-size:24px;color:green">{{totalBinaryIncome | currency:'BDT '}}</td>
                                    <td colspan="2"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                    <div class="panel-body">
                        <div style="text-align:center">
                            <h3>Sponsor Income</h3>
                        </div>
                        <div style="margin-bottom:10px">Showing 1 - {{Sponsorledger.length}} of {{Sponsorledger.length}} total</div>

