                                    <td style="font-size:24px;color:green">{{totalGenerationIncome | currency:'BDT '}}</td>
                                    <td colspan="2"></td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

