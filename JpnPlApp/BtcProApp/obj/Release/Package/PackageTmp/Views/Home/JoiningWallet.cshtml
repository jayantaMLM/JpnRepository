
@{
    ViewBag.Title = "Joining Wallet";
}

<script src="~/Scripts/angular.min.js"></script>
<script src="~/app/scripts/MemberTransferController.js"></script>

<section class="wrapper">
    <div ng-app="app" ng-controller="MemberTransfer" ng-cloak>
        <div class="row">
            <div class="col-sm-12">
                <section class="panel">
                    <header class="panel-heading">
                        <i class="fa fa-money" style="color:green"></i> Joining Wallet
                    </header>
                    <div class="panel-body">
                        <div style="margin-bottom:10px">Showing 1 - {{ledger.length}} of {{ledger.length}} total</div>

                        <table class="table table-bordered table-striped" style="margin-top:30px">
                            <thead>
                                <tr>
                                    <th>Transaction Date</th>
                                    <th>Received</th>
                                    <th>Paid</th>
                                    <th>Transferred To / From</th>
                                    <th>Balance</th>
                                    <th>Remarks</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="trf in transfers | orderBy:'-Id'">
                                    <td>{{trf.Date}}</td>
                                    <td>{{trf.Deposit |  currency:'BDT  '}}</td>
                                    <td>{{trf.Withdraw |  currency:'BDT  '}}</td>
                                    <td>{{trf.Transfer}}</td>
                                    <td>{{trf.Amount |  currency:'BDT  '}}</td>
                                    <td>{{trf.Comment}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

