<h2>Member Withdrawal Requests</h2>

<script src="~/Scripts/angular.min.js"></script>
<script src="~/app/scripts/TransfersWithdrawalController.js"></script>

<section class="wrapper" style="margin-top:30px !important">
    <div ng-app="app" ng-controller="TransferWithdraw" ng-cloak>
        <div class="row">
            <div class="col-sm-12">
                <section class="panel">
                    <header class="panel-heading">
                        <i class=""></i> Transfer to Withdrawal/Joining Wallet
                    </header>
                    <div class="panel-body">
                        <div>
                            <table style="width:75%;min-width:300px;margin:0 auto">
                                <tr style="line-height:30px">
                                    <td style="text-align:right;padding-right:15px"><label>Transfer from Wallet Type :</label></td>
                                    <td>
                                        <select name="wallet" ng-model="wallet" required class="form-control">
                                            <option value="1">Development Wallet</option>
                                            <option value="2">Referral Wallet</option>
                                            <option value="3">Royalty Club Wallet</option>
                                            <option value="4">Diamond Club Wallet</option>
                                        </select>
                                    </td>
                                    <td />
                                </tr>
                                <tr style="line-height:30px" ng-show="wallet=='1'">
                                    <td style="padding-top:18px;text-align:right;padding-right:15px"><label>Development Wallet Balance (BDT) :</label></td>
                                    <td style="color:green"><h3>{{wallet1Balance | currency:'BDT '}}</h3></td>
                                    <td />
                                </tr>
                                <tr style="line-height:30px" ng-show="wallet=='2'">
                                    <td style="padding-top:18px;text-align:right;padding-right:15px"><label>Referral Wallet Balance (BDT) :</label></td>
                                    <td style="color:green"><h3>{{wallet2Balance | currency:'BDT '}}</h3></td>
                                    <td />
                                </tr>
                                <tr style="line-height:30px" ng-show="wallet=='3'">
                                    <td style="padding-top:18px;text-align:right;padding-right:15px"><label>Royalty Club Wallet Balance (BDT) :</label></td>
                                    <td style="color:green"><h3>{{wallet3Balance | currency:'BDT '}}</h3></td>
                                    <td />
                                </tr>
                                <tr style="line-height:30px" ng-show="wallet=='4'">
                                    <td style="padding-top:18px;text-align:right;padding-right:15px"><label>Diamond Club Wallet Balance (BDT) :</label></td>
                                    <td style="color:green"><h3>{{wallet4Balance | currency:'BDT '}}</h3></td>
                                    <td />
                                </tr>
                                <tr style="line-height:30px">
                                    <td style="text-align:right;padding-right:15px"><label>Transfer to Wallet Type :</label></td>
                                    <td>
                                        <select name="Towallet" ng-model="walletTo" required class="form-control">
                                            <option value="6">Withdrawal Wallet</option>
                                            <option value="5">Joining Wallet</option>
                                        </select>
                                    </td>
                                    <td />
                                </tr>

                                <tr style="line-height:30px">
                                    <td style="padding-top:8px;text-align:right;padding-right:15px"><label>Amount to Transfer (BDT):</label></td>
                                    <td><input type="number" ng-model="amount" class="form-control" ng-min="1" /></td>
                                    <td></td>
                                </tr>
                                <tr style="line-height:30px;margin:5px">
                                    <td></td>
                                    <td>
                                        <br />
                                        <span><button class="btn btn-success" ng-hide="amount==null || amount<0 || amountisValid()" ng-click="Transaction()" style="margin:0 auto;">Transfer</button></span>
                                    </td>
                                </tr>
                            </table>
                        </div>
                        <hr style="margin-top:10px;margin-bottom:10px" />
                        <table class="table table-bordered table-striped" style="margin-top:30px">
                            <thead>
                                <tr>
                                    <th>Transaction Date</th>
                                    <th>Transferred to Wallet</th>
                                    <th>Received</th>
                                    <th>Paid</th>
                                    @*<th>Balance</th>*@
                                    <th>Remarks</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="trf in transfers | orderBy:'-Id'">
                                    <td>{{trf.Date}}</td>
                                    <td>{{trf.Walletname}}</td>
                                    <td>{{trf.Deposit |  currency:'BDT  '}}</td>
                                    <td>{{trf.Withdraw |  currency:'BDT  '}}</td>
                                    @*<td>{{trf.Amount |  currency:'BDT  '}}</td>*@
                                    <td>{{trf.Comment}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>

