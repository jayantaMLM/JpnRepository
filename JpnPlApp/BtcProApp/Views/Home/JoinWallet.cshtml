<script src="~/Scripts/angular.min.js"></script>
<script src="~/app/scripts/JoiningWalletController.js"></script>

<section class="wrapper">
    <div ng-app="app" ng-controller="JoiningWallet" ng-cloak>
        <div class="row">
            <div class="col-sm-12">
                <section class="panel">
                    <header class="panel-heading">
                        <i class="fa fa-money" style="color:green"></i> Development Wallet
                    </header>
                    <div class="panel-body">
                        <div style="margin-bottom:10px">Showing 1 - {{JoiningWalletledger.length}} of {{JoiningWalletledger.length}} total</div>
                        <table class="table table-striped table-bordered" style="width:100%;text-align:center">
                            <thead>
                                <tr>
                                    <th style="text-align:center">Date</th>
                                    <th style="text-align:center">Transaction Type</th>
                                    <th style="text-align:center">Ledger</th>
                                    <th style="text-align:center">Deposit Amount</th>
                                    <th style="text-align:center">Withdrawal Amount</th>
                                    <th style="text-align:center">Balance</th>
                                    <th style="text-align:center">Remarks</th>
                                </tr>
                            </thead>
                            <tbody>
                                <tr ng-repeat="ldgr in JoiningWalletledger | orderBy:'-Id'">
                                    <td>{{ldgr.sDate}}</td>
                                    <td>{{ldgr.TransactionType}}</td>
                                    <td>{{ldgr.Ledger}}</td>
                                    <td><span ng-if="ldgr.Deposit>0">{{ldgr.Deposit | currency:'BDT '}}</span></td>
                                    <td><span ng-if="ldgr.Withdraw>0">{{ldgr.Withdraw | currency:'BDT '}}</span></td>
                                    <td>{{ldgr.Balance | currency:'BDT '}}</td>
                                    <td>{{ldgr.Remarks}}</td>
                                </tr>
                            </tbody>
                        </table>
                    </div>
                </section>
            </div>
        </div>
    </div>
</section>


